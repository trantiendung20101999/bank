<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeBankSavingBookActivity">

    <TextView
        android:id="@+id/txtTiltle"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Thông tin sổ tiết kiệm"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/txtStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTiltle"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:text="Ngày bắt đầu "></TextView>
    <TextView
        android:id="@+id/txtTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtStartDate"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:text="Term"></TextView>
    <TextView
        android:id="@+id/txtTypeSaving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTerm"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:text="Loai tiet kiem "></TextView>
    <TextView
        android:id="@+id/txtMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTypeSaving"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="Money :100000"></TextView>

    <Button
        android:id="@+id/btnRutSo"
        android:layout_width="120dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_button"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Rút sổ "
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtMoney"></Button>

    <Button
        android:id="@+id/btnTinhLaiTerm"
        android:layout_width="220dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_button"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:text="Tính lãi đến hiện tại  "
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtMoney"></Button>

    <Button
        android:id="@+id/btnTinhLaiEnd"
        android:layout_width="220dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_button"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:text="Tính lãi hết định kỳ  "
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnTinhLaiTerm"></Button>

    <TextView
        android:id="@+id/txtLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnTinhLaiEnd"
        android:textSize="20dp"
        android:layout_margin="40dp"
        android:gravity="center"
        android:text=""></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>